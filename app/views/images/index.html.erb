<p id="notice"><%= notice %></p>

<h1>Images</h1>
<h3><%= link_to "Ranking screen", index_path %></h3>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Rating</th>
      <th>Matches</th>
      <th>Wins</th>
      <th>Losses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.path %></td>
        <td><%= image.rating %></td>
        <td><%= image.matches %></td>
        <td><%= image.wins %></td>
        <td><%= image.losses %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
